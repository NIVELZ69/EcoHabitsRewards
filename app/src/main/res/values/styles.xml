<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Estilo general para toda la app -->
    <style name="AppTheme" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/green_primary</item>
        <item name="colorSecondary">@color/green_secondary</item>
        <item name="android:windowBackground">@color/background_light</item>
        <item name="android:statusBarColor">@color/green_primary_dark</item>
        <item name="android:navigationBarColor">@color/green_primary</item>
    </style>

    <!-- Estilo para títulos grandes -->
    <style name="TitleText">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/text_dark</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <!-- Estilo para subtítulos o descripciones -->
    <style name="BodyText">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_dark</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <!-- Botón redondeado personalizado -->
    <style name="GreenButton">
        <item name="cornerRadius">16dp</item>
        <item name="android:backgroundTint">@color/green_primary</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Estilo para tarjetas (retos, recompensas, etc.) -->
    <style name="CardStyle">
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">4dp</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:backgroundTint">@color/white</item>
    </style>

</resources>
