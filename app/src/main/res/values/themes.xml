<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Tema principal de la app -->
    <style name="Theme.EcoHabitsRewards" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Colores primarios -->
        <item name="colorPrimary">@color/green_primary</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorPrimaryContainer">@color/green_secondary</item>

        <!-- Colores secundarios -->
        <item name="colorSecondary">@color/green_secondary</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Fondo y barras -->
        <item name="android:windowBackground">@color/background_light</item>
        <item name="android:statusBarColor">@color/green_primary_dark</item>
        <item name="android:navigationBarColor">@color/green_primary</item>

        <!-- Otros -->
        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/text_dark</item>
        <item name="colorOutline">@color/gray_light</item>

        <item name="android:forceDarkAllowed" tools:targetApi="29">false</item>
    </style>
</resources>
